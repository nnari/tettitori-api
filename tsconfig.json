{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "typeRoots": ["./types", "./node_modules/@types"],
    "skipLibCheck": true, //the compiler shits itself if this isn't set
    "rootDir": "./src",
    "lib": ["ES6"],
    "outDir": "./build",
    "esModuleInterop": true,
    "strict": true,
    "excludes": ["tests/*"]
  }
}
